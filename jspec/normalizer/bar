for $file (@files) {
    print "$file\n";
    open(IN, "<$file");
    $contents = "";
    while (<IN>) {
        $contents .= $_;
    }    
    close(IN);
    for $repl (@$repls) {
        $t = $repl->{'t'};
        $r = $repl->{'r'};
        $contents =~ s/\Q$t\E/$r/g;
    }
    $file =~ s/\.js$//;
    open(OUT, ">${file}-spec.js");
    print OUT $contents;
    close(OUT);
}
